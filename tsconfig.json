{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": true,
    "types": [
      "reflect-metadata"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },

    "lib": [
      "es2017"
  ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
